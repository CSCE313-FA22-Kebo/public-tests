        "input": "",
        "output": "",
        "comparison": "included",
        "timeout": 1,
        "points": 20
      },
      {
        "name": "Signal Output Info",
        "setup": "make -s clean; make -s >/dev/null 2>&1",
        "run": "./client -f 5.csv >out.tst 2>/dev/null; comm -12 <(sort out.tst) <(sort test-files/file_good.txt) | wc -l) -eq $(cat test-files/file_good.txt | wc -l)",
        "input": "",
        "output": "",
        "comparison": "included",
        "timeout": 1,
        "points": 15
      },
      {
        "name": "Signal Output Error pt. 1",
        "setup": "make -s clean; make -s >/dev/null 2>&1",
        "run": "./client -f 17.csv >out.tst 2>/dev/null; [ $(comm -12 <(sort out.tst) <(sort test-files/file_bad.txt) | wc -l) -eq $(cat test-files/file_bad.txt | wc -l) ]",      
        "input": "",
        "output": "[^0-1]",
        "comparison": "regex",
        "timeout": 1,
        "points": 15
